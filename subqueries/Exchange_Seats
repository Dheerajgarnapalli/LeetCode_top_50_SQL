select q.id , (case 
    when q.student_c is not null then q.student_c
     when q.student_c1 is not null then q.student_c1
     else q.student end) as student
from(
select * 
from(
select *
from Seat t1
left join
(
select id-1 as id_c, student as student_c
from Seat
where id%2=0) t2
on t1.id=t2.id_c) k1
left join
(
select id+1 as id_c1 , student as student_c1
from Seat
where id%2!=0 and id+1 in (select id from Seat)) as k2
on k1.id=k2.id_c1) q
